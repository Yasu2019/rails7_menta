
<head>
<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
</head>


       <% timeline1=[] %>
       <% timeline2=[] %>

       <% koumoku.each do |koumo| %>
        <% ti=0 %>
          <% products.each do |pro| %>
             <% if pro.food==koumo %>
               <% timeline1=[pro.food,pro.goal_attainment_level]%>
               <% ti=1 %>
             <% end %>
          <% end %>
          <% if ti==0 %>
            <% timeline1=[koumo,0]%>
          <% end %>
          <% timeline2.push(timeline1) %>
        
        <% end %>
       
      

  
   <%= bar_chart timeline2,max:"100" ,width: "1200px", height: "500px",xtitle: "達成度(%)", ytitle: "項目",suffix: "%" %>
   
  


